generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  email     String
  username  String
  firstName String
  lastName  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  active    Boolean
}

model Orders {
  id                Int    @id @default(autoincrement())
  instrument        String
  side              String
  price             Float
  status            String
  quantity          Int
  remainingQuantity Int
  date              String
}
